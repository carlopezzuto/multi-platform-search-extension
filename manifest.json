{
  "manifest_version": 3,
  "name": "Search Extension",
  "version": "1.3",
  "description": "Search selected text on different platforms",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Search on Multiple Platforms",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}
