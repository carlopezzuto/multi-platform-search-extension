{
  "manifest_version": 3,
  "name": "Multi-Platform Search Extension",
  "version": "2.0",
  "description": "Search selected text across 13+ platforms with history, keyboard shortcuts, and advanced features",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Search on Multiple Platforms",
    "default_icon": "icon.png"
  },
  "options_page": "options.html",
  "icons": {
    "128": "icon.png"
  }
}
