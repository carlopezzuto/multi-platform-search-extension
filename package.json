{
  "name": "multi-platform-search-extension",
  "version": "2.0.0",
  "description": "Multi-platform search extension with 13+ platforms, history, keyboard shortcuts, and advanced features",
  "author": "Enrico Heidelberg",
  "contributors": [
    "Carlo Pezzuto <talent@carlopezzuto.com> (https://linkedin.com/in/carlopezzuto)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/carlopezzuto/multi-platform-search-extension.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  },
  "type": "commonjs",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm test && npm run test:e2e",
    "playwright:install": "playwright install chromium",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write \"**/*.{js,json,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,html}\"",
    "build": "./build.sh",
    "prebuild": "npm run lint && npm run format:check && npm test"
  },
  "keywords": [
    "chrome-extension",
    "search",
    "multi-platform",
    "linkedin",
    "github",
    "stackoverflow",
    "twitter",
    "reddit",
    "youtube"
  ]
}
